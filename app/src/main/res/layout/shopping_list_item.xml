<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true">

    <CheckBox
        android:id="@+id/shopping_list_item_purchased"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:scaleX="1.70"
        android:scaleY="1.70"
        android:buttonTint="@color/colorPrimary"/>

    <EditText
        android:id="@+id/shopping_list_item_name"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:hint="Name"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/shopping_list_item_category"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shopping_list_item_name"
        android:layout_below="@+id/shopping_list_item_name"
        android:hint="Category"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/shopping_list_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopping_list_item_name"
        android:layout_toEndOf="@+id/shopping_list_item_category"
        android:hint="Qty"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/item_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:background="@color/colorEditGray"
        android:elevation="0dp"
        android:hapticFeedbackEnabled="false"
        android:scaleType="fitXY"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_delete_item" />

    <Spinner
        android:id="@+id/shopping_list_item_spinner"
        android:layout_width="113dp"
        android:layout_height="43dp"
        android:layout_below="@+id/shopping_list_item_name"
        android:layout_toEndOf="@+id/shopping_list_item_quantity" />

</RelativeLayout>