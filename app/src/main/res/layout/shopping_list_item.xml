<?xml version="1.0" encoding="utf-8"?>

<GridLayout
    android:id="@+id/shopping_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:id="@+id/shopping_list_item_purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_columnWeight=".5"
        />

    <TextView
        android:id="@+id/shopping_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_columnWeight="1.5"
        android:textColor="#000000"
        android:text="Name"/>

    <TextView
        android:id="@+id/shopping_list_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_columnWeight="1"
        android:textColor="#000000"
        android:text="Category"/>

    <TextView
        android:id="@+id/shopping_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_columnWeight="1"
        android:textColor="#000000"
        android:text="Price"/>

    <TextView
        android:id="@+id/shopping_list_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_columnWeight="1"
        android:textColor="#000000"
        android:text="Quantity"/>

</GridLayout>